@model Vision.Models.Book
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Details</h2>

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-light text-light ml-0 row container">
            <div class="col-12 col-md-6">
                <h1 class="text-primary">@Model.Class</h1>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                @*<h1 class="text-muted">Total : @((Model.).ToString("c"))</h1>*@
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-success"> @Model.DepartFrom</h3>
                                <h3 class="text-muted">@Model.ArriveTo</h3>
                                <h4 class="text-muted">@Model.Begin </h4>
                                <h4 class="text-muted">@Model.End </h4>

                                <p class="text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 text-center">
                        <img src="@Model.Image" width="100%" class="rounded" />
                    </div>

                    <div>
                        <a class="btn btn-info" asp-action="Index">Back</a>
                    </div>
                    <div>
                        <a class="btn btn-info" asp-action="Quotes" 
                           asp-route-id="@Model.Id">Back</a>
                    </div>
                </div>

            </div>
        </div>
