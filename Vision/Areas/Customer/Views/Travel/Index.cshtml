@model Vision.Models.ViewModels.TravelVM
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";

}
<span id="myheading"></span>
<div class="jumbotron ">
    <h1 class="display-4">Shan Travel Group</h1>
    <p class="lead">
        Shan Travel is an experienced travel management company. <br />
        We work with you to manage all elements of your travel <br />
        in an efficient, cost effective and ethical manner.
    </p>

    <div style="margin-left:950px; margin-top:-100px;">
        <a asp-area="Customer" asp-controller="Home"
           asp-action="Index" class="btn btn-primary" style="width:auto;">
            Lets Move To The Technical World

        </a>
    </div>
    <hr class="my-4">
    <form class="form-inline" asp-controller="Search" asp-action="Search" method="post">
        <label class="sr-only" for="inlineFormInputName2">Depart From</label>
        <input type="text" asp-for="Depart" class="form-control mb-2 mr-sm-2"
               id="inlineFormInputName2" placeholder="Depart From">
        <span asp-validation-for="Depart" class="text-danger"></span>

        <label class="sr-only" for="inlineFormInputGroupUsername2">Arrive To</label>
        <input type="text" class="form-control" asp-for="Arrival"
               id="inlineFormInputGroupUsername2" placeholder="Arrive To">
        <span asp-validation-for="Arrival" class="text-danger"></span>

        <label class="sr-only" for="inlineFormInputGroupUsername2">Class</label>
        <input type="text" class="form-control" asp-for="Class"
               id="inlineFormInputGroupUsername2" placeholder="Class">


        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>


</div>
<br />
<div id="div1">

    <div class="row container pb-3 backgroundWhite">
        <div class="col-12">
            <div class="row">
                <h2 class="text-dark"><b>The Popular Places</b></h2>

                <div class="col-12">
                    <div class="row my-3">
                        @foreach (var item in Model.Book)
                        {
                            <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                <div class="card" style="border:2px solid black;border-radius:5px; background:url('/images/leaves.png')">
                                    <div class="pl-3 pt-1 text-center">
                                        <h3 class="card-title text-primary"><b>@item.Class</b></h3>
                                    </div>
                                    <div class="d-flex justify-content-between ">
                                        <div class="pl-1 text-muted">Price per service</div>
                                        @*<div class="pr-1 text-danger h5">$@item.</div>*@
                                    </div>
                                    <img src="@item.Image"
                                         class="card-img-top p-2 rounded " height="150" width="150" />

                                    <div class="text-muted text-center pb-2">
                                        <b>Depart From:</b>
                                        @item.DepartFrom
                                    </div>
                                    <div class="text-muted text-center pb-2">
                                        <b>Arrive To:</b>
                                        @item.ArriveTo
                                    </div>
                                    <div class="text-muted text-center pb-2">
                                        <b>Arrival Date:</b>
                                        @item.Begin
                                    </div>
                                    <div class="text-muted text-center pb-2">
                                        <b>Return Date:</b>
                                        @item.End
                                    </div>

                                    <a asp-action="Details" class="btn btn-dark"
                                       style="border-radius:2px;"
                                       asp-route-id="@item.Id">Details</a>
                                    <a asp-action="Quotes" class="btn btn-dark" style="border-radius:2px;"
                                       asp-route-id="@item.Id">Request A Quote</a>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div><!--div1 ends here-->
