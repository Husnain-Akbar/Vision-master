@model Vision.Models.ViewModels.HomeViewModel
    <div class="jumbotron ">
        <h1 class="display-4">IT Services</h1>
        <p class="lead">
            Our team is experienced in latest technologies. <br />
            We work with you to manage all elements of your online bussiness <br />
            in an efficient, cost effective and ethical manner.
        </p>
        <hr class="my-4">
        <div class="titles">
            <div class="titles-wrap">
                <h1>We'are<span> Shan Group</span></h1>
                <h2><span class="txt-rotate">   </span></h2>
                
            </div>
        </div>

    </div>
<br />



@foreach (var category in Model.CategoryList.OrderBy(o => o.DisplayOrder))
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #43ac6a;border-radius:5px; background:url('/images/leaves.png')">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between ">
                                            <div class="pl-1 text-muted">Price per service</div>
                                            <div class="pr-1 text-danger h5">$@service.Price</div>
                                        </div>
                                        <img src="@service.ImageUrl"
                                             class="card-img-top p-2 rounded " height="150" width="150" />

                                        <div class="text-muted text-center pb-2">@service.Frequency.Name</div>
                                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px;"
                                           asp-route-id="@service.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<br />
<section class="container-fluid">
    <h2 class="h1-responsive font-weight-bold text-center my-4">Team Leaders</h2>

    <h2 class="font-weight-bolder">Our Team</h2>
    <div class="row">
        @foreach (var item in Model.TeamList)
        {


            <div class="col-3" style="width: 18rem;">
                <h3>@item.Name</h3>
                <hr />
                <h5>@item.Role</h5>

            </div>

        }
    </div>
</section>
<br />
<section class="container-fluid">
    <h2 class="h1-responsive font-weight-bold text-center my-4">Feedback of Partners</h2>
    <div class="row">
        @foreach (var item in Model.FeedbackList)
        {
            <div class="col-3" style="width: 18rem;">
                <h5 class="card-title">@item.ApplicationUser.Name</h5>
                @*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
                <p class="card-text blockquote"><i>"@item.Comment"</i></p>
                @*<a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>*@
            </div>
        }
    </div>
</section>

<br />
<!--Section: Contact v.2-->
<section class="container-fluid">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>
    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Contact.Name">Your Name</label>
                    <input class="form-control"
                           asp-for="Contact.Name" placeholder="Enter name">
                    <span asp-validation-for="Contact.Name" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Contact.Email">Email address</label>
                    <input type="email" asp-for="Contact.Email"
                           required class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

                </div>
                <div class="form-group">
                    <label asp-for="Contact.Message">Messae </label>
                    <textarea class="form-control" asp-for="Contact.Message"
                              required rows="4"> </textarea>


                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fa fa-address-book"></i>
                    <h4>San Francisco, CA 94126, USA</h4>
                </li>

                <li>
                    <i class="fa fa-phone"></i>
                    <h4>+ 01 234 567 89</h4>
                </li>

                <li>
                    <i class="fa fa-envelope"></i>
                    <h6>contact@mdbootstrap.com</h6>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>